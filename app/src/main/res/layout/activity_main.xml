<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#eff0f2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8sp">

        <Button
            android:layout_marginLeft="10sp"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:id="@+id/btn_bluetooth"
            android:background="@drawable/bluetooth1"/>
        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블루투스 연결"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/txt_bluetooth"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10sp">

        <Button
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:padding="20sp"
            android:id="@+id/btn_Fingerprint"
            android:background="@drawable/fingerprint_default1"/>
        <TextView
            android:layout_marginLeft="16sp"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지문 인증"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/txt_certify"/>

    </LinearLayout>



</LinearLayout>